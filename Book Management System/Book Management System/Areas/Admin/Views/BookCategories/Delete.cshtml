                    <div class="tab-pane fade in active" id="home-pills">
                        <div class="row" style="margin-top: 30px">
                            <div class="col-lg-10 col-lg-offset-1">
                                <div>
                                   
                                    <dl class="dl-horizontal">
                                        <dt>
                                            @Html.DisplayNameFor(model => model.CateName)
