
@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div id="page-wrapper">

    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Thêm mới nhà cung cấp</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>

    <div class="row">
        <div class="col-lg-12">
            <form id="form" class="form-horizontal">
                <div class="form-group row">
                    <label for="PublisherName" class="col-md-2 col-form-label text-right">PublisherName</label>
                    <div class="col-md-10">
                        <input name="name" type="text" class="form-control" id="PublisherName" value="">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="Address" class="col-md-2 col-form-label text-right">Address</label>
                    <div class="col-md-10">
                        <input name="address" type="text" class="form-control" id="Address" value="">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="Phone" class="col-md-2 col-form-label text-right">Phone</label>
                    <div class="col-md-10">
                        <input name="phone" type="text" class="form-control" id="Phone" value="">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="Fax" class="col-md-2 col-form-label text-right">Fax</label>
                    <div class="col-md-10">
                        <input name="fax" type="text" class="form-control" id="Fax" value="">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="Email" class="col-md-2 col-form-label text-right">Email</label>
                    <div class="col-md-10">
                        <input name="email" type="text" class="form-control" id="Email" value="">
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-md-2"></div>
                    <div class="col-md-10">
                        <button type="submit" class=" btn btn-default" id="submit">Create</button>
                    </div>
                </div>
            </form>
            <a href="@Url.Action("Index")">Back to List</a>
        </div>

    </div>
    <!-- /.row -->
</div>
@section scripts {

    <script>
        $(document).ready(function () {

            $("#form").bootstrapValidator({
                feedbackIcons: {
                    valid: 'glyphicon glyphicon-ok',
                    invalid: 'glyphicon glyphicon-remove',
                    validating: 'glyphicon glyphicon-refresh'

                },
                fields: {
                   
                    name: {
                        validators: {
                            notEmpty: {
                                message: 'The PublisherName cannot be empty !'
                            },
                            stringLength: {
                                min: 2,
                                message: 'The CateName must be more than 2 !'
                            },
                            regexp: {
                                regexp: /^[^`~!@@#$%^&*()\-_=+{}|<,>?:;"']+$/,
                                message: 'Publisher name can consist of character and number except special characters'
                            }
                        }
                    },
                    address: {
                        validators: {
                            notEmpty: {
                                message: 'The Address cannot be empty !'
                            },
                            stringLength: {
                                min: 6,
                                max: 100,
                                message: 'The Address must be more than 6 or less than 100 characters long !'
                            }
                        }
                    },
                    phone: {
                        validators: {
                            notEmpty: {
                                message: 'The Phone cannot be empty !'
                            },
                            stringLength: {
                                min: 10,
                                max: 11,
                                message: 'The Phone must be 10 or 11 characters'
                            },
                            regexp: {
                                regexp: /^[0-9]+$/,
                                message:'The phone must be numbers'
                            }
                        }
                    },
                    fax: {
                        validators: {
                            notEmpty: {
                                message: 'The Phone cannot be empty !'
                            },
                            stringLength: {
                                min: 11,
                                max: 11,
                                message: 'The Phone must be 11 characters'
                            },
                            regexp: {
                                regexp: /^[0-9]+$/,
                                message: 'The phone must be numbers'
                            }
                        }
                    },
                    email: {
                        validators: {
                            notEmpty: {
                                message: 'The Phone cannot be empty !'
                            },
                            emailAddress: {
                                message: 'The value is not a valid email address'
                            }
                        }
                    }

                }
            });
        });
    </script>
}

