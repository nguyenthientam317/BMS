@model IEnumerable<Book_Management_System.Models.Publisher>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div id="page-wrapper">

    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">@Book_Management_System.Resources.Admin.PulisherResource.Resources.Manage_Publishers</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>

    <div class="row">

        <div class="col-lg-12">
            <div class="table-responsive">
                <p>
                    @Html.ActionLink(@Book_Management_System.Resources.Admin.PulisherResource.Resources.Add, "Create")
                </p>
                <table  class="table table-hover" id="table1">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.IsActive)
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.IsActive)
                            </td>
                            <td>
                                @Html.ActionLink(@Book_Management_System.Resources.Admin.PulisherResource.Resources.Edit, "Edit", new { id = item.Id }) |
                                <a id="detail" onclick="Open('@item.Id')"> @Book_Management_System.Resources.Admin.PulisherResource.Resources.Detail </a>
                            </td>
                        </tr>
                    }

                </table>
            </div>
        </div>
    </div>
</div>

<!-- Modal -->
<div id="myModal" class="modal fade" role="dialog">
    <div class="modal-dialog modal-md">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header" style="background-color:steelblue; color: white">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">@Book_Management_System.Resources.Admin.PulisherResource.Resources.Publisher</h4>
            </div>
            <div class="modal-body" id="Preview">
                @*Content*@
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">@Book_Management_System.Resources.Admin.PulisherResource.Resources.Close</button>
            </div>
        </div>

    </div>
</div>

<!--Detail-->
<script type="text/javascript">
    function Open(currentId) {
        $.ajax({
            type: "Get",
            url: "@Url.Action("Details","ManagePublishers")",
            data: { id: currentId },
            success: function (data) {
                $('#Preview').html(data);
                $('#myModal').modal('show');
            }
        })
    }
</script>






