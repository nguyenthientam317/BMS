@model IEnumerable<Book_Management_System.Models.BookCategory>

<div class="sidebar_section">
    <div class="sidebar_title">
        <h5>@Book_Management_System.Resources.Client.HomeResource.Resources.Home_Cate</h5>
        <hr style="height: 10px; border: 0;box-shadow: 0 10px 10px -10px #8c8b8b inset;" />
    </div>
    <ul class="sidebar_categories" style="list-style-type: disc; margin-left: 20px;">
        @foreach (var item in Model)
        {
        <li>
            <a href="@Url.Action("Search", "Home", new { cate = item.Id, author = TempData["CurrentAuthor"] , currentFilter = TempData["CurrentFilter"]})">@item.CateName</a>
        </li>
            <hr />
        }
    </ul>
</div>
